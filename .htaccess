# Volunteer App - Environment-compatible .htaccess

# Security Headers
<IfModule mod_headers.c>
    # X-Frame-Options
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # X-Content-Type-Options
    Header always set X-Content-Type-Options "nosniff"
    
    # X-XSS-Protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# PHP Configuration
<IfModule mod_php7.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 60
    php_value memory_limit 256M
</IfModule>

# Disable directory browsing
Options -Indexes

# Protect sensitive files
<FilesMatch "\.(env|txt|md|sql|log|ini|conf)$">
    <RequireAll>
        Require all denied
    </RequireAll>
</FilesMatch>

# Protect config files
<Files "config*.php">
    <RequireAll>
        Require all denied
    </RequireAll>
</Files>

# Allow access to main files
<Files "config.php">
    <RequireAll>
        Require all granted
    </RequireAll>
</Files>

<Files "index.php">
    <RequireAll>
        Require all granted
    </RequireAll>
</Files>

<Files "check_environment.php">
    <RequireAll>
        Require all granted
    </RequireAll>
</Files>

# Compression for better performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache static files
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
</IfModule>

# Error pages (if you want to create custom ones)
# ErrorDocument 404 /volunteer_app/404.php
# ErrorDocument 500 /volunteer_app/500.php

# Rewrite rules for clean URLs (optional)
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirect to HTTPS in production (uncomment if needed)
    # RewriteCond %{HTTPS} off
    # RewriteCond %{HTTP_HOST} !^localhost
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Block access to sensitive directories
    RewriteRule ^(logs|backups|temp)/.*$ - [F,L]
</IfModule>
